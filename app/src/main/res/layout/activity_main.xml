<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:background="#E63946"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/brandName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MenuMaker"
                android:textAlignment="center"
                android:textColor="#f1faee" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="75dp"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/transparent">

                <ImageView
                    android:id="@+id/homeImagenCabezeraView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fondo3"></ImageView>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categori" />

            <TextView
                android:id="@+id/mealName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categori" />

            <TextView
                android:id="@+id/mealName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categori" />

            <TextView
                android:id="@+id/mealName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categori" />

            <TextView
                android:id="@+id/mealName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>